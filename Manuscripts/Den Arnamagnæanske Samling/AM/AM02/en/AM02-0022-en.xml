                                <textLang mainLang="la" otherLangs="no">Latin and
                                    Norwegian</textLang>
                            </msItem>
                            <msItem n="1.13" class="sagnfr">
                                <locus from="36r" to="40r">36r-40r</locus>
                                <title type="supplied" xml:lang="en">A Collection of Texts
                                    Concerning the History of Scotland and England</title>
                                <note>Fols 36v, 37v and 40v-42r are blank.</note>
                            </msItem>
                            <msItem n="1.14" class="leid">
                                <locus from="43r" to="43r">43r</locus>
