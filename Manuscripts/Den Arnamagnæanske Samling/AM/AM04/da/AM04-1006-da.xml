               <msContents>
                  <summary><title type="uniform">Knýtlinga saga</title></summary>
                  <msItem n="1">
                     <locus from="1r" to="102r"/>
                     <title type="uniform">Knýtlinga saga</title>
                     <textLang mainLang="is">Islandsk</textLang>
                     <rubric>Knytlinga Saga</rubric>
                     <rubric>1 Cap. Frä Sveine Könge Vlfs Syne Og Magnuse K<ex>on</ex>ge
                        göda</rubric>
                     <incipit>Sweirn son Vlfs Jarls tök Jarldöm</incipit>
                     <explicit>Nälega hingad aa Nordur lönd.</explicit>
                     <finalRubric>nu lykur hier ad seigia fraa Knytlingum.</finalRubric>
                     <note>Bl. 102v-105v er blanke.</note>
                  </msItem>
               </msContents>


               <physDesc>
                  <objectDesc form="codex">
                     <supportDesc material="chart">
                        <support>
                           <p>
                              <material>Bøttepapir</material> med vandmærke (våbenskjold med lilje
                              og bogstverne "NRO" som modmærke).</p>
                        </support>
                        <extent>iii + 105 + iii. <dimensions type="leaf" scope="all">
                              <!--  bl. 69 medregnes -->
                              <height unit="mm" quantity="188">188</height>
                              <width unit="mm" quantity="150">150</width>
                           </dimensions>. </extent>
