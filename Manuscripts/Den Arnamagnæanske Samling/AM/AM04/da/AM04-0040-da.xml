                  <msItem n="3">
                     <locus from="68r:22" to="70v:7">68r:22-70v:7</locus>
                     <title type="uniform" xml:lang="da">Valdemar IIs forordning om jernbyrds
                        afskaffelse</title>
                     <textLang mainLang="da">Gammeldansk</textLang>
                     <rubric>Th<ex>ett</ex>e er koni<ex>n</ex>gh valdemars logh</rubric>
                     <incipit>VAldemar aff gudz nathe dane oc <lb/> vendæ koni<ex>n</ex>gh
                           sendh<ex>e</ex>r alle the i <lb/> skone boo quethe och sin
                        nathe</incipit>
                     <explicit>Th<ex>ette</ex> haff<lb rend="hyphenated"/>ue wij saa skipæt for
                           ma<ex>n</ex>ne thørfft saghe</explicit>
                     <bibl>Aakjær og Kroman: <ref type="primary-3" target="DGL1-2">Danmarks gamle
                           Landskabslove</ref>
                        <biblScope unit="volume">I.2</biblScope>
