                            </supportDesc>
                            <layoutDesc>
                                <layout columns="1" writtenLines="22">
                                    <p>
                                        <list>
                                            <item>Eindálka.</item>
                                            <item>Leturflötur er ca. <dimensions type="written" unit="mm">
                                                <height>115</height>
                                                <width>205</width>
                                            </dimensions></item>
                                            <item>Línufjöldi er 22.</item>
                                        </list>
                                    </p>
                                </layout>
