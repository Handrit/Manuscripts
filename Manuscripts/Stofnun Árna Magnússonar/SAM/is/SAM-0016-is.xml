                        <textLang mainLang="is">Íslenska</textLang>
                        <titlePage xml:lang="is">
                            <docTitle>
                                <titlePart type="main">Þessa Bók sem inniheldur ýmislegt um sjúkdóma
                                    og margbreytt lækningaráð við þeim sömu bæði af grösum og dýrum
                                    með fleiru</titlePart>
                                <titlePart type="sub">hefur að nýju uppskrifa látið bóndinn monsr.
                                        <name type="person" key="RunSve001">Runólfur
                                    Sverrisson</name> á <name type="place">Maríubakka</name> árin
                                    1832 og 33.</titlePart>
                            </docTitle>
                        </titlePage>

