                  <handDesc hands="1">
                     <summary>Ein hönd.</summary>
                     <handNote scribe="SigEin004" script="kanzlei kurrent" scope="sole"><name type="person" key="SigEin004">Sighvatur Einarsson</name> 
                        á <placeName key="SkáVes001"></placeName>Skálakoti, kansellískrift og fljótaskrift.</handNote>
