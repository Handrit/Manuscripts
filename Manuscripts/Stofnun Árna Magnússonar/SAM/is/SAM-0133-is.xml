                    <msContents xml:lang="is">
                        <summary><title type="supplied">Sögubók</title></summary>

                        <textLang mainLang="IS">Íslenska</textLang>

                        <titlePage type="ms">
                            <docTitle>

                                <titlePart type="main">Sögubók fornmanna sem fráskýrir þeirra ættum
                                    og atgjörvi, hreysti og hugprýði, lunderni og limasköpun,
                                    vopnfimi og viturleik, manndáð og mörgu fleiru.</titlePart>
                                <titlePart type="sub">Að nýju skrifuð og samansöfnuð í eitt af
                                    bóndanum <name type="person" key="JohJon004">Jóhannesi
                                        Jónssyni</name> á <placeName key="SmyHau01">Smyrlahóli</placeName> á árunum 1851-52-53-54-55-56-57
                                        (<locus from="1r" to="1r">1r</locus>).</titlePart>

                            </docTitle>

                        </titlePage>
                        <msItem n="1" defective="false" class="regist">
                            <locus from="2r" to="2r">2r</locus>
                            <title type="supplied">Efnisyfirlit</title>
                            <rubric>Innihald bókarinnar</rubric>
                        </msItem>

                        <msItem n="2" defective="false" class="ridd">
                            <locus from="3r" to="90r">3r-90r</locus>
                            <title type="uniform">Mágus saga jarls</title>
                            <rubric>Hér skrifast sagan af Máus jalli</rubric>
                            <incipit>Svo vísar í annálum að Karl keisari tók við ríki í Saxlandi
                                …</incipit>
                            <explicit>… tók Rafn Hængsson lögsögn hér á Íslandi anno 930.</explicit>
                            <colophon>… og endum vér so þessa sögu þann 14da marts 1851.</colophon>
                        </msItem>

                        <msItem n="3" defective="false" class="ridd">
                            <locus from="90r" to="94v">90r-94v</locus>
                            <title type="uniform">Ajax saga frækna</title>
                            <rubric>Sagan af Ajax frækna</rubric>
                            <incipit>Svo byrjar sögu þessa að Sigurður hefur kóngur heitið
                                …</incipit>
                            <explicit>… þá hann var áttatigi og sjö ára og enda so þessi saga af
                                Ajax hinum frækna.</explicit>
                            <colophon>Enduð þann 5ta maii 1851 af I.I.S.</colophon>
                        </msItem>

                        <msItem n="4" defective="false" class="fas">
                            <locus from="95r" to="117v">95r-117v</locus>
                            <title type="uniform">Göngu-Hrólfs saga</title>
                            <rubric>Sagan af Göngu-Hrólfi</rubric>
                            <incipit>Það er upphaf þessarar sögu að Hreggviður hefur kóngur heitið
                                …</incipit>
                            <explicit>… en guði eru að þakka allir góðir hlutir og endar svo þessi
                                saga.</explicit>
                            <colophon>Enduð þann 18da mars 1853 af I.I.S.</colophon>
                        </msItem>

                        <msItem n="5" defective="false" class="fas">
                            <locus from="118r" to="134v">118r-134v</locus>
                            <title type="uniform">Eiríks saga frækna</title>
                            <rubric>Sagan af Eiríki frækna</rubric>
                            <incipit>Á ofanverðum dögum Haralds kóngs hins hárfagra …</incipit>
                            <explicit>… þótt hann væri fyrr á tímum og lúkum vér svo þessari
                                sögu.</explicit>
                            <colophon>Enduð þann 17da október 1854 af I.I.S.</colophon>
                        </msItem>

                        <msItem n="6" defective="false" class="avint">
                            <locus from="134v" to="139r">134v-139r</locus>
                            <title type="uniform">Sagan af Selikó og Berissu</title>
                            <rubric>Saga af Selikó og bræðrum hans</rubric>
                            <incipit>Í því ríki er Juida heitir …</incipit>
                            <explicit>… lifði þar eftir ánægt og aðskildist aldrei á meðan það
                                lifði.</explicit>
                            <colophon>Enduð þann 30ta oktober 1854 af I.I.S.</colophon>
                        </msItem>

                        <msItem n="7" defective="false" class="ridd">
                            <locus from="139r" to="144v">139r-144v</locus>
                            <title type="uniform">Sagan af Felix og Iðunni</title>
                            <rubric>Sagan af þeim systkinum Felix og Iðunni</rubric>
                            <incipit>Suður í landinu Pólónía bjó einn ríkur borgari …</incipit>
                            <explicit>… í lukku og velgengni og endar svo þessa sögu</explicit>
                            <colophon>þann 8da nóvembris 1854 af I.I.S.</colophon>
                        </msItem>

                        <msItem n="8" defective="false" class="ridd">
                            <locus from="145r" to="163r">145r-163r</locus>
                            <title type="uniform">Sagan af Goðleifi prúða</title>
                            <rubric>Sagan af Goðleifi prúða</rubric>
                            <incipit>Austarlega í landinu Portúgal …</incipit>
                            <explicit>… og endar svo þessa sögu af Goðleifi prúða.</explicit>
                            <colophon>Endað þann 29da janúar 1855 af J. Jónssyni.</colophon>
                        </msItem>

                        <msItem n="9" defective="false" class="fas">
                            <locus from="163v" to="203r">163v-203r</locus>
                            <title type="uniform">Hrólfs saga Gautrekssonar</title>
                            <rubric>Sagan af Hrólfi kóngi Gautrekssyni</rubric>
                            <incipit>Þar hefjum vér eina kátlega frásögu af kóngi þeim …</incipit>
                            <explicit>… og lúkum vér svo þessa ágætu sögu af Hrólfi kóngi
                                Gautrekssyni.</explicit>
                            <colophon>Enduð þann 13da mars 1855 af J. Jónssyni.</colophon>
                        </msItem>

                        <msItem n="10" defective="false" class="fas">
                            <locus from="203r" to="214v">203r-214v</locus>
                            <title type="uniform">Egils saga einhenda og Ásmundar
                                berserkjabana</title>
                            <rubric>Sagan af Eigli einhenda og Ásmundi berserkjabana</rubric>
                            <incipit>Hertryggur hét kóngur, hann réði fyrir Austur-Rússía
                                …</incipit>
                            <explicit>… og ekkert sem þar var innanborðs, og endast svo þessi
                                saga.</explicit>
                            <colophon>Enduð þann 19da mars 1855 af J. Jónssyni.</colophon>
                        </msItem>

                        <msItem n="11" defective="false" class="ridd">
                            <locus from="214v" to="226r">214v-226r</locus>
                            <title type="uniform">Fertrams saga og Platos</title>
                            <rubric>Sagan af Fertram og Plató</rubric>
                            <incipit>Artus er kóngur nefndur megtugur og stórauðugur …</incipit>
                            <explicit>… og skildu svo með kærleika og endar svo þessa sögu af
                                Fertram og Plató.</explicit>
                            <colophon>Enduð þann 28da mars 1855 af J. Jónssyni.</colophon>
                        </msItem>

                        <msItem n="12" defective="false" class="avint">
                            <locus from="226v" to="234v">226v-234v</locus>
                            <title type="uniform">Hemings þáttur Áslákssonar</title>
                            <rubric>Saga af Hemingi Áslákssyni</rubric>
                            <incipit>Haraldur konungur Sigurðarson stýrði Norvegi …</incipit>
                            <explicit>… hann hefur verið mesti afreksmaður og besti drengur og endar
                                svo þessi saga.</explicit>
                            <colophon>Enduð þann 22n október 1855 af J. Jónssyni.</colophon>
                        </msItem>

                        <msItem n="13" defective="false" class="fas">
                            <locus from="234v" to="241r">234v-241r</locus>
                            <title type="uniform">Áns saga bogsveigis</title>
                            <rubric>Sagan af Án bogsveigir</rubric>
                            <incipit>Í þann tíma er fylkiskóngar réðu fyrir Norvegi …</incipit>
                            <explicit>… og endar svo sögu af Án bogsveigir. 26ta jan.
                                1856.</explicit>
                        </msItem>

                        <msItem n="14" defective="false" class="forns">
                            <locus from="241r" to="254r">241r-254r</locus>
                            <title type="uniform">Ásmundar saga víkings</title>
                            <rubric>Sagan af Ásmundi víking</rubric>
                            <incipit>Hringur hefur kóngur heitið …</incipit>
                            <explicit>… lifðu lengi og unntust vel til enda. Endar svo þessa
                                sögu.</explicit>
                            <colophon>Þann 2n febrúar 1856 af J. Jónssyni.</colophon>
                        </msItem>

                        <msItem n="15" defective="false" class="ridd">
                            <locus from="254r" to="263v">254r-263v</locus>
                            <title type="uniform">Nikulás saga leikara</title>
                            <rubric>Sagan af Nikulaus leikara</rubric>
                            <incipit>Svo segja sannfróðir menn og meistarar …</incipit>
                            <explicit>… fyrir margra hluta sakir og endar svo þessa sögu.</explicit>
                            <colophon>Þann 7da febrúar 1856.</colophon>
                        </msItem>

                        <msItem n="16" defective="false" class="ridd">
                            <locus from="263v" to="305r">263v-305r</locus>
                            <title type="uniform">Karlamagnús saga</title>
                            <rubric>Hér byrjar söguna af þeim nafnfræga keisara Carólus Magnus
                                hvörsu hann mannlega og herralega barðist fyrir þá kristilegu trú,
                                með þeim tólf jafningjum</rubric>
                            <incipit>Fyrir Frakklandi réði einn kóngur sá eð Pipping hét …</incipit>
                            <explicit>… fyrir utan allan enda að eilífu amen.</explicit>
                            <colophon>Þessi fágæta merkis saga er enduð á Smyrlahóli þann 7da mars
                                1856 af J. J.S.</colophon>
                        </msItem>

                        <msItem n="17" defective="false" class="ridd">
                            <locus from="305r" to="309r">305r-309r</locus>
                            <title type="uniform">Drauma-Jóns saga</title>
                            <rubric>Saga af Drauma-Jóni</rubric>
                            <incipit>Henrik er maður nefndur, jarl að tign …</incipit>
                            <explicit>… hann er blessaður um aldir alda.</explicit>
                            <colophon>Enduð þann 2n janúar 1857 af J. Jónssyni.</colophon>
                        </msItem>

                        <msItem n="18" defective="false" class="avint">
                            <locus from="309r" to="311v">309r-311v</locus>
                            <title type="uniform">Hróa þáttur heimska</title>
                            <title type="parallel">Slysa-Hróa saga</title>
                            <rubric>Saga af Slysa-Hróa</rubric>
                            <incipit>Það er upphaf þessarar sögu að Sveinn konungur réði fyrir
                                Danmörk …</incipit>
                            <explicit>… og varð hann hinn göfugasti maður og ágætur höfðingi í
                                Englandi.</explicit>
                            <colophon>Enduð þann 5ta janúar 1857 af J. J.S.</colophon>
                        </msItem>

                        <msItem n="19" defective="false" class="avint">
                            <locus from="311v" target="321r">311v-321r</locus>
                            <title type="uniform">Jasonar saga bjarta</title>
                            <rubric>Saga af Jason bjarta</rubric>
                            <incipit>Fyrir Indíalandi réði kóngur sá er Melandus hét …</incipit>
                            <explicit>… og lúkum vér svo sögunni af Jason bjarta og Herrauð
                                hertoga.</explicit>
                            <colophon>Enduð þann 17da jan. 1857 af J. J.S.</colophon>
                        </msItem>

                        <msItem n="20" defective="false" class="ridd">
                            <locus from="321r" to="327r">321r-327r</locus>
                            <title type="uniform">Flóres saga konungs og sona hans</title>
                            <rubric>Sagan af Flóres og sonum hans</rubric>
                            <incipit>Konungur sá réði fyrir Tartaría er Flóres hét …</incipit>
                            <explicit>… eður þeim bræðrum sonum hans og lýkur svo þessari
                                sögu.</explicit>
                            <colophon>Enduð 22n jan. 1857 af J.J.S.</colophon>
                        </msItem>

                        <msItem n="21" defective="false" class="islt">
                            <locus from="327r" to="327v">327r-v</locus>
                            <title type="uniform">Þorsteins þáttur forvitna</title>
                            <rubric>Æfintýr af Þorsteini forvitna</rubric>
                            <incipit>Þorsteinn hét maður íslenskur er kom á fund Haralds kóngs
                                Sigurðarsonar …</incipit>
                            <explicit>… og lyktar svo hér af Þorsteini forvitna að segja.</explicit>
                            <colophon>Þetta allt hér að framan ritað er endað dag 22n janúar 1857 af
                                Jóhannesi Jónssyni á Smyrlahóli.</colophon>
                        </msItem>


