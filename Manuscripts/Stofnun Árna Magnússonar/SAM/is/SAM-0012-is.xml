                    <msContents>
                        <summary>
                            <title type="supplied">Kvæða- og rímnasafn</title>
                            <note>Handritið inniheldur tvö kvæða- og rímnasöfn. Fyrra kverið er
                                líklega skrifað eftir prentaðri útgáfu: <ref>
                                    <bibl>Nockur Gaman-Kvædi orkt af Ymsum Skáldum á 18du Øld</bibl>
                                </ref>.</note>
                        </summary>

                        <textLang mainLang="is">Íslenska</textLang>
                        <msItem n="1" defective="true" class="kvad rimur">
                            <locus from="1r" to="24v">1r-24v</locus>
                            <title type="supplied">Kvæða- og rímnasafn I</title>
                            <note>Vantar framan af.</note>


                            <msItem n="1.1" defective="true" class="rimur">
                                <locus from="1r" to="4v">1r-4v</locus>
                                <author key="JonSig013">Jón Sigurðsson lögsagnari</author>
                                <title type="uniform">Tímaríma</title>
                                <incipit defective="true">… sögum / fengu ei til sveitar sig …</incipit>
                                <explicit>… bindur skyndi-enda á / allir lifi í friði.</explicit>
                                <note>
                                    <p>Vantar framan af. Rímurnar hefjast í 136. erindi.</p>
                                    <p>Á bl. <locus from="24v" to="24v">24v</locus> eru skrifuð
                                        erindi 28 og 160 með þessari yfirskrift: <q xml:lang="is">Hér skrifast tvö erindi sem vanta í Tímarímu sem er það
                                            28. og 160.</q>
                                    </p>
                                </note>
                            </msItem>

                            <msItem n="1.2" defective="false" class="kvad">
                                <locus from="5r" to="8r">5r-8r</locus>
                                <author key="GunSno001">Gunnlaugur Snorrason</author>
                                <note>Kvæðið er hér eignað <name type="person" key="ArnBod001">Árna
                                        Böðvarssyni</name>.</note>
                                <title type="uniform">Skipafregn</title>
                                <rubric xml:lang="is">Skipafregn ort af Árna Böðvarssyni</rubric>
                                <incipit type="upphaf">Vorið langt / verður oft Dönunum …</incipit>
                                <explicit>… við skulum skjala að skuli mál / skipafregn heita.</explicit>
                                <note>18 erindi alls.</note>
                            </msItem>

                            <msItem n="1.3" defective="false" class="kvad">
                                <locus from="8r" to="12r">8r-12r</locus>
                                <author key="BjaGis001">Bjarni Gissurarson</author>
                                <title type="uniform">Hrakfallabálkur</title>
                                <rubric xml:lang="is">Hrakfalla bálkur ortur af presti síra Bjarna
                                    Gissurarsyni á Múla í Skriðdal </rubric>
                                <incipit type="upphaf">Hjöluðu tveir í húsi forðum …</incipit>
                                <explicit>… Maður er tíðum manni í nauð.</explicit>
                                <note>41 erindi.</note>
                            </msItem>

                            <msItem n="1.4" defective="false" class="kvad">
                                <locus from="12r" to="14r">12r-14r</locus>
                                <author key="GudBer001">Guðmundur Bergþórsson</author>
                                <title type="uniform">Lákakvæði</title>
                                <rubric xml:lang="is">Láka-kvæði ort af Guðmundi Bergþórssyni</rubric>
                                <incipit type="upphaf">Hér er sagan harma kauna …</incipit>
                                <explicit>… sem geta nærri má.</explicit>
                                <incipit type="refrain">Sá ég siglufáka / sveima höfnum frá. /
                                    Legillinn hans Láka / lagði framhjá.</incipit>
                                <note>27 erindi auk viðlags.</note>
                            </msItem>

                            <msItem n="1.5" defective="false" class="kvad">
                                <locus from="14r" to="15v">14r-15v</locus>
                                <author key="BenJon001">Benedikt Jónsson</author>
                                <title type="uniform">Einbúavísur</title>
                                <rubric xml:lang="is">Einbúa-vísur eignaðar síra Benidikt Jónssyni á
                                    Bjarnarnesi</rubric>
                                <incipit type="upphaf">Karl ógiftur einn réð á …</incipit>
                                <explicit>… kljáð til þagnar lykta.</explicit>
                                <note>25 erindi.</note>
                            </msItem>

                            <msItem n="1.6" defective="false" class="rimur">
                                <locus from="15v" to="21v">15v-21v</locus>
                                <title type="uniform">Bóndakonuríma</title>
                                <rubric xml:lang="is">Ríma af einni bóndakonu</rubric>
                                <incipit type="upphaf">Dvalins læt ég dælu jór …</incipit>
                                <explicit>… þénustubúinn, sælir.</explicit>
                                <note>
                                    <p>Hefur verið eignuð <name type="person">Jóni
                                        Þorsteinssyni</name> (sbr. <bibl>
                                            <ref>Rímnatal 1966:86</ref>
                                        </bibl>).</p>
                                    <p>105 erindi.</p>
                                </note>
                            </msItem>

                            <msItem n="1.7" defective="false" class="kvad">
                                <locus from="22r" to="24v">22r-24v</locus>
                                <author key="PalJon005">Páll Jónsson Vídalín</author>
                                <title type="supplied">Esópískar dæmisögur</title>
                                <rubric xml:lang="is">Asópiskar dæmisögur ortar af P.J. Vídalín
                                    sýslumanni í Dalasýslu</rubric>
                                <incipit type="upphaf">Um hanann sem fann gimstein …</incipit>
                                <explicit>… oft er flagð í fögru skinni, forðastu það.</explicit>
                                <colophon>Endir á þessu kveri sem skrifað er anno 1848 (bl. <locus from="24v" to="24v">24v</locus>).</colophon>
                                <note>Á eftir fara tvö erindi úr Tímarímu (sbr. athugasemdir við
                                    1.1).</note>
                            </msItem>
                        </msItem>

                        <msItem n="2" defective="false" class="kvad">
                            <locus from="25r" to="49v">25r-49v</locus>
                            <title type="supplied">Kvæðasafn II</title>
                            <note>
                                <q xml:lang="is">Hér skrifast nú annað safn af ýmsum gömlum kvæðum
                                    sem af ýmislegum gömlum skáldum eru ort útaf margvíslegu efni
                                    þeirra</q>.</note>

                            <msItem n="2.1" defective="false" class="kvad">
                                <locus from="26r" to="27v">26r-27v</locus>
                                <rubric xml:lang="is">Kvæði af Konstantínus keisara</rubric>
                                <incipit type="upphaf">Konstantínus keisarinn eini …</incipit>
                                <explicit>… grafinn í æru velút-hafinn.</explicit>
                            </msItem>

                            <msItem n="2.2" defective="false" class="kvad">
                                <locus from="27v" to="28v">27v-28v</locus>
                                <rubric xml:lang="is">Ekkjukvæði</rubric>
                                <incipit type="upphaf">Hvör sem setur son Guðs á sína trú …</incipit>
                                <explicit>… því krossinn hans að bera.</explicit>
                            </msItem>

                            <msItem n="2.3" defective="false" class="kvad">
                                <locus from="28v" to="32r">28v-32r</locus>
                                <author key="IngJon003">Ingjaldur Jónsson í Múla </author>
                                <rubric xml:lang="is">Tötradúðakvæði</rubric>
                                <incipit type="upphaf">Skikkju gulls ég skenkja vil …</incipit>
                                <explicit>… og úr máta barinn.</explicit>
                            </msItem>

                            <msItem n="2.4" defective="false" class="salm">
                                <locus from="32r" to="33v">32r-33v</locus>
                                <rubric xml:lang="is">Hugbót</rubric>
                                <incipit type="upphaf">Kristinn maður þenktu þrátt …</incipit>
                                <explicit>… eignist gleði nægð.</explicit>
                            </msItem>

                            <msItem n="2.5" defective="false" class="kvad">
                                <locus from="34r" to="44r">34r-44r</locus>
                                <author key="GudBer001">Guðmundur Bergþórsson</author>
                                <title type="uniform">Vinaspegill</title>
                                <rubric xml:lang="is">Hér skrifast Vina spegill</rubric>
                                <incipit type="upphaf">Forðum tíð einn brjótur brands …</incipit>
                                <explicit>… vil ég láta vísnaskrá / vinaspegil kalla.</explicit>
                                <colophon>Endir á Vinaspegli.</colophon>
                            </msItem>

                            <msItem n="2.6" defective="true" class="kvad">
                                <locus from="44v" to="48v">44v-48v</locus>
                                <author key="GudBer001">Guðmundur Bergþórsson</author>
                                <title type="uniform">Heimspekingaskóli</title>
                                <rubric xml:lang="is">Kvæðið Heimspekingaskóli ort af Guðmundi
                                    Bergþórssyni. Lag er: Dægrastytting skemmta skal</rubric>
                                <incipit type="upphaf">Þegar fólki er þannin vart …</incipit>
                                <explicit>… hjartað um dauðann …</explicit>
                                <incipit type="melody">Dægrastytting skemmta skal</incipit>
                                <note>Vantar aftan af.</note>
                            </msItem>

                            <msItem n="2.7" defective="true" class="kvad">
                                <locus from="49r" to="49v">49r-v</locus>
                                <title type="supplied">Draumur konu Pílatusar</title>
                                <rubric xml:lang="is">Pílatí kvinnu draumur</rubric>
                                <incipit defective="true">… að faðmar lærðir segja …</incipit>
                                <explicit defective="true">… græðarinn vor hinn góði …</explicit>
                                <note>Brot. Vantar bæði framan og aftan af.</note>
                            </msItem>
                        </msItem>
                    </msContents>

                    <physDesc>
                        <objectDesc form="codex">
                            <supportDesc material="chart">
                                <support>
                                    <p>Pappír.</p>
                                </support>
                                <extent>49 blöð (<dimensions type="leaf" scope="all" unit="mm">
                                        <height>171</height>
                                        <width>114</width>
                                    </dimensions>).</extent>
                                <foliation>
                                    <p>Síðari tíma blaðmerking með blýanti.</p>
                                </foliation>
                                <condition>
                                    <p>
                                        <list>
                                            <item>Blöð hafa týnst framan og aftan af handritinu.</item>
                                            <item>Nokkur fremstu og öftustu blöðin hafa verið límd á
                                                sýrulausan pappír.</item>
                                            <item>Fremsta blaðið er skítugt og skriftin máð og
                                                illlæsileg.</item>
                                            <item>Blettir yfir texta á bl. <locus from="21v" to="22r">21v-22r</locus>, <locus from="32r" to="32r">32r</locus>, <locus from="34r" to="34r">34r</locus>, <locus from="36v" to="36v">36v</locus>. Dökkir blettir á neðri spássíum bl.
                                                  <locus from="30r" to="47v">30-47</locus>.</item>
                                        </list>
                                    </p>
                                </condition>
                            </supportDesc>

                            <layoutDesc>
                                <layout columns="1" writtenLines="20 30">
                                    <p>
                                        <list>
                                            <item>Eindálka.</item>
                                            <item>Línufjöldi er ca 20-30.</item>
                                        </list>
                                    </p>
                                </layout>
                            </layoutDesc>
                        </objectDesc>

                        <handDesc hands="1">
                            <handNote scope="sole" script="humcursiva" scribe="unknown">
                                <p>Óþekktur skrifari, snarhönd.</p>
                            </handNote>
                        </handDesc>

                        <decoDesc>
                            <decoNote type="border">Lítill bekkur í lok efnis á bl. <locus from="4v" to="4v">4v</locus>, <locus from="12r" to="12r">12r</locus>,
                                    <locus from="14r" to="14r">14r</locus>, <locus from="15v" to="15v">15v</locus>, <locus from="27v" to="27v">27v</locus>,
                                    <locus from="28v" to="28v">28v</locus>, <locus from="32r" to="32r">32r</locus>, <locus from="33v" to="33v">33v</locus>,
                                    <locus from="44r" to="44r">44r</locus>.</decoNote>
                            <decoNote type="frieze" subtype="tail-piece">Bókahnútur á bl. <locus from="24v" to="24v">24v</locus></decoNote>
                        </decoDesc>

                        <additions>
                            <p>
                                <list>
                                    <item> Á bl. <locus from="25v" to="25v">25v</locus> er krot,
                                        m.a. nafnið <name type="person">Þorsteinn Jónsson</name>.</item>
                                    <item>Á neðri spássíu bl. <locus from="33v" to="33v">33v</locus>
                                        hefur verið krotað nafnið Jón.</item>
                                    <item>Á neðri spássíu bl. <locus from="44r" to="44r">44r</locus>
                                        standa nöfnin <name type="person">Jónas</name> og <name type="person">Jóhannes Jóhannesarson</name> o.fl.</item>
                                </list>
                            </p>
                        </additions>

                        <bindingDesc>
                            <binding contemporary="false">
                                <p>Handritið er óinnbundið en því er pakkað inn í umbúðapappír og
                                    hörð pappaspjöld fest utan um með hvítum borðum. </p>
                            </binding>
                        </bindingDesc>

                        <accMat>
                            <p>Laus seðill með vélrituðu efnisyfirliti öðru megin og handskrifuðum
                                skilaboðum frá gefanda hinum megin: <q xml:lang="is">Þessa kvæðabók
                                    sendi ég Handritastofnun Íslands að gjöf. Arnarstöðum 18/8
                                1969.</q></p>
                        </accMat>

                    </physDesc>

                    <history>
                        <origin when="1848">
                            <p>Handritið var skrifað á <origPlace key="IS">Íslandi</origPlace>.
                                Fyrri partur þess um <origDate when="1848">1848</origDate> (sbr. bl.
                                    <locus from="24v" to="24v">24v</locus>) og hinn síðari líklega
                                um svipað leyti.</p>
                        </origin>
                        <provenance>
                            <p>Síðasti eigandi handritsins á undan Handritastofnun Íslands var <name type="person">Stefán Kr. Vigfússon</name> á <name type="place">Arnarstöðum í Norður-Þingeyjarsýslu</name>.
                            </p>
                        </provenance>
                        <acquisition when="1969-08-18">
                            <p>Stefán Kr. Vigfússon sendi Handritastofnun Íslands að gjöf 18. ágúst
                                1969.</p>
                        </acquisition>
                    </history>

