                    <physDesc>
                        <objectDesc form="codex">
                            <supportDesc material="chart">
                                <support>Pappír.</support>
                                <extent>54 blöð.</extent>
                                <foliation>
                                    <p>Seinni tíma blýantsblaðmerking 1-54.</p>
                                </foliation>
                                <condition>
                                    <p>Blöð hafa glatast úr báðum rímunum en af bænunum er aðeins
                                        varðveitt hér eitt stakt blað sem lá laust í handritinu
                                        þegar það var afhent stofnuninni.</p>
                                </condition>
                            </supportDesc>
                        </objectDesc>

                        <bindingDesc>
                            <binding contemporary="unknown">
                                <p>Handritið er laust úr bandi en með því liggur band úr tréspjöldum
                                    klæddum skinni (<dimensions type="binding" scope="all" unit="mm">
                                        <height>164</height>
                                        <width>100</width>
                                        <depth>19</depth>
                                    </dimensions>). </p>
                            </binding>
                        </bindingDesc>
                    </physDesc>

                    <history>
                        <origin notBefore="1700" notAfter="1799" evidence="conjecture" cert="medium">
                            <p>Handritin voru skrifuð á <origPlace key="IS">Íslandi</origPlace> á <origDate notBefore="1700" notAfter="1799"> 18. öld</origDate>.
                                Annar hlutinn var skrifaður árið 1746, fyrsti hlutinn líklega á s.hl. 18. aldar,
                                en sá þriðji á f. hl. aldarinnar.</p>
                        </origin>
                        <provenance>
                            <p>Á bl. <locus from="15v" to="15v">15v</locus>: <q>
                                    <name type="person">Halldór Jónsson</name> á <name type="place">Meðaldal</name> held ég eigi þessa bók með réttu.</q> Enn
                                fremur nafnið <name type="person">Magnús Halldórsson</name>. Hinum
                                fyrrnefnda er einnig eignuð bókin á bl. <locus from="16r" to="16r">16r</locus>.</p>
                        </provenance>
                        <acquisition when="1968">
                            <p>Handritið var keypt af <name type="person" key="JohOla003">Jóhanni
                                    Gunnari Ólafssyni</name> bæjarfógeta á <name type="place">Ísafirði</name> um 1968.</p>
                        </acquisition>
                    </history>

                    <additional>
                        <adminInfo>
