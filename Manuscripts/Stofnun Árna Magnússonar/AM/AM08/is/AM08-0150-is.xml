                        <msItem n="1" defective="false" class="kvad">
                            <locus from="2r" to="9r">2r-9r</locus>
                            <title type="supplied">Lukkunnar bók</title>
                            <incipit type="upphaf">Athöfn þín er öll sem dauð / enginn má þér hjálpa
                                af nauð …</incipit>
                            <explicit>… eilífum Guði að hvílast með.</explicit>
                            <finalRubric>Endir bókarinnar.</finalRubric>
                            <note>88 erindi. Kvæðið er um jafnmör dýr. Hvert erindi hefur yfirskrift
                                viðkomandi dýrs.</note>

                            <msItem n="1.1" defective="false" class="formal">
                                <locus from="1r" to="1v">1r-v</locus>
                                <title type="supplied">Formáli</title>
                                <incipit>Þessi litla bók kallast Lukkunnar bók …</incipit>
                                <explicit>… það veiti oss öllum vor kæri himneski faðir.
                                    Amen.</explicit>
                            </msItem>
                        </msItem>

                        <msItem n="2" defective="false" class="kvad">
                            <locus from="9v" to="14r">9v-14r</locus>
                            <author key="HalPet001">Hallgrímur Pétursson</author>
                            <rubric>Samhendingaflokkur sr. H[allgríms] sumar og vetur</rubric>

                            <msItem n="2.1" defective="false" class="vedkv">
                                <locus facs="9v" to="9v">9v</locus>
                                <title type="supplied">Sumars og vetrar verkun</title>
                                <incipit type="upphaf">Hlýtt er, vott var, / víst blítt, síst strítt
                                    …</incipit>
                                <note>1 erindi. Merkt sem fyrsta erindi samstæðnanna.</note>
                            </msItem>

                            <msItem n="2.2" defective="false" class="kvad gamkv">
                                <locus facs="9v" to="14r">9v-14r</locus>
                                <title type="uniform">Samstæður</title>
                                <rubric>Gaman og alvara</rubric>
                                <incipit type="upphaf">Oft er ís lestur / illa skór festur
                                    …</incipit>
                                <explicit>… gleðji gunnskara / gaman og alvara. Finis.</explicit>
                                <note>28 erindi, merkt 2-29.</note>
                            </msItem>
                        </msItem>

                        <msItem n="3" defective="false" class="kvad">
                            <locus from="14r" to="17v">14r-17v</locus>
                            <author key="HalPet001">Hallgrímur Pétursson</author>
                            <title type="uniform">Aldarháttur</title>
                            <rubric>Aldarháttur Íslendinga ortur af sr. H[allgrími]
                                P[éturssyni]</rubric>
                            <incipit type="upphaf">Áður á tíðum var tíska hjá lýðum …</incipit>
                            <explicit>… og lyktar svo fræði. Finis.</explicit>
                            <note>21 erindi.</note>
                            <bibl><ref type="secondary-1">Ljóðmæli I</ref>.</bibl>
                        </msItem>

                        <msItem n="4" defective="false" class="helgkv">
                            <locus from="18r" to="22v">18r-22v</locus>
                            <title type="uniform">Maríulykill</title>
                            <rubric>Maríulykill</rubric>
                            <incipit type="upphaf">Veittu mér að ég verða mætti / vonar maður sem
                                allir aðrir …</incipit>
                            <explicit>… friði oss Kristur alla.</explicit>
                            <note>37 erindi. Sums staðar eignað <name type="person" key="JonAra001"
                                    >Jóni Arasyni</name>.</note>
                            <bibl><ref type="primary-1">Íslenzk helgikvæði II</ref>.</bibl>
                        </msItem>

                        <msItem n="5" defective="false" class="salm">
                            <locus from="23r" to="26r">23r-26r</locus>
                            <author key="OlaJon007">[Ólafur Jónsson á Söndum]</author>
                            <title type="supplied">Mikils ætta eg aumur að akta</title>
                            <rubric>Ein söngvísa af heilögum englum hvörja þjónustu þeir veita
                                Kristo og oss um vora daga</rubric>
                            <incipit type="upphaf">Mikils ætta eg aumur að akta / ást og miskunn
                                Guðs míns góða …</incipit>
                            <explicit>… í dýkið elds lát hann detta. Dixi.</explicit>
                            <note>24 erindi.</note>
                        </msItem>

                        <msItem n="6" defective="false" class="helgkv">
                            <locus from="26v" to="28v">26v-28v</locus>
                            <title type="uniform">Ólafsvísur</title>
                            <rubric>Vísur af Ólafi kóngi helga</rubric>
                            <incipit type="upphaf">Herra Ólaf hjálparinn Noregs landa / þér kom til
                                handa …</incipit>
                            <explicit>… lof þitt jafnan sungið sé.</explicit>
                            <note>13 erindi.</note>
                            <bibl><ref type="secondary-1">Íslenzk helgikvæði II</ref>.</bibl>
                        </msItem>

                        <msItem n="7" defective="false" class="helgkv">
                            <locus from="28v" to="30r">28v-30r</locus>
                            <title type="uniform">Ólafsvísur</title>
                            <rubric>Enn aðrar vísur af Ólafi kóngi helga</rubric>
                            <incipit type="upphaf">Þú faðir og son / þeir líf og ljós …</incipit>
                            <explicit>… og um allar aldir njóta.</explicit>
                            <note>14 erindi.</note>
                            <bibl><ref type="secondary-1">Íslenzk helgikvæði II</ref>.</bibl>
                        </msItem>

                        <msItem n="8" defective="false" class="helgkv">
                            <locus from="30r" to="32r">30r-32r</locus>
                            <author key="JonAra001">[Jón Arason]</author>
                            <title type="uniform">Krossvísur</title>
                            <title type="parallel">Nikulásdiktur</title>
                            <rubric>Nikulás diktur</rubric>
                            <incipit type="upphaf">Dýrðarfullur drottinn minn, / dugðu mér svo ég
                                mætti …</incipit>
                            <explicit>… vegligur Nikulás. Finis.</explicit>
                            <note>22 erindi.</note>
                            <bibl><ref type="secondary-1">Íslenzk helgikvæði II</ref>.</bibl>
                        </msItem>

                        <msItem n="9" defective="false" class="helgkv">
                            <locus from="32r" to="34r">32r-34r</locus>
                            <title type="uniform">Andreasdiktur</title>
                            <rubric>Andrés postula diktur</rubric>
                            <incipit type="upphaf">Temens veit eg tíma að skýra / taka í burt af
                                lífið stýra …</incipit>
                            <explicit>… fást mun ráð með fylgi þínu. Finis.</explicit>
                            <note>23 erindi.</note>
                            <bibl><ref type="secondary-1">Íslenzk helgikvæði II</ref>.</bibl>
                        </msItem>

                        <msItem n="10" defective="false" class="helgkv">
                            <locus from="34r" to="36v">34r-36v</locus>
                            <title type="uniform">Jóhannesdiktur</title>
                            <rubric>Jóhannes postula diktur</rubric>
                            <incipit type="upphaf">Bið eg nú einvaldsenglakóng fyrir almátt sinn
                                …</incipit>
                            <explicit>… hjálp mér Jóhannes.</explicit>
                            <note>26 erindi.</note>
                            <bibl><ref type="primary-1">Íslenzk helgikvæði II</ref>.</bibl>
                        </msItem>

                        <msItem n="11" defective="false" class="helgkv">
                            <locus from="36v" to="39r">36v-39r</locus>
                            <title type="uniform">Krosskvæði</title>
                            <rubric>Krosskvæði</rubric>
                            <incipit type="upphaf">Hlýði allir ýtar snjallir …</incipit>
                            <incipit type="upphaf">Guð himnanna, græðari manna …</incipit>
                            <explicit>… þinn elskulegur sómi.</explicit>
                            <note>46 erindi. Fyrsta erindið hér er úr öðru kvæði (sbr. Íslenzk
                                helgikvæði I,2:207 og 273).</note>
                            <bibl><ref type="secondary-1">Íslenzk helgikvæði I,2</ref>.</bibl>
                        </msItem>

                        <msItem n="12" defective="false" class="helgkv">
                            <locus from="39r" to="42r">39r-42r</locus>
                            <author key="JonAra001">[Jón Arason]</author>
                            <title type="supplied">Krossvísur</title>
                            <rubric>Hér byrjar Krossvísur</rubric>
                            <incipit type="upphaf">María drottning, mild og skær, / meyjanna ertu
                                blóm …</incipit>
                            <explicit>… og birta þar með letur.</explicit>
                            <note>39 erindi.</note>
                            <bibl><ref type="secondary-1">Íslenzk helgikvæði I,2</ref>.</bibl>
                        </msItem>

                        <msItem n="13" defective="false" class="helgkv">
                            <locus from="42r" to="42v">42r-42v</locus>
                            <title type="uniform">Maríuvísur</title>
                            <rubric>Maríuvísur</rubric>
                            <incipit type="upphaf">María meyjan skæra, / minning þín og æra
                                …</incipit>
                            <explicit>… móðir sönn að Elí. Finis.</explicit>
                            <note>6 erindi.</note>
                            <bibl><ref type="primary-1">Íslenzk helgikvæði II</ref>.</bibl>
                        </msItem>

                        <msItem n="14" defective="false" class="helgkv">
                            <locus from="45v" to="47r">45v-47v</locus>
                            <title type="uniform">Pálsdiktur</title>
                            <rubric>Sankti Páls diktur</rubric>
                            <incipit type="upphaf">Bið eg að styrki málsnilld mína / minn drottinn
                                fyrir gæsku sína …</incipit>
                            <explicit>… höldar þeir sem heyrðu hans orð.</explicit>
                            <note>31 erindi.</note>
                            <bibl><ref type="primary-1">Íslenzk helgikvæði II</ref>.</bibl>
                        </msItem>

                        <msItem n="15" defective="false" class="helgkv">
                            <locus from="47v" to="49v">47v-49v</locus>
                            <title type="uniform">Gyðingsdiktur</title>
                            <rubric>Diktur er kallast Gyðingsdiktur</rubric>
                            <incipit type="upphaf">Hér vil eg ágætt ævintýr / eitt af mörgum greina
                                …</incipit>
                            <explicit>… þér sé heiður hæsti herrann góði. Finis.</explicit>
                            <note>25 erindi.</note>
                        </msItem>
                    </msContents>

