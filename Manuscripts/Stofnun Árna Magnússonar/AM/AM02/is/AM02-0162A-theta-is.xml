               <msContents xml:lang="is">
                  <textLang mainLang="is">Íslenska</textLang>
                  <msItem n="1" defective="true" class="isl">
                     <title type="uniform">Egils saga Skallagrímssonar</title>
                     <note>Þrjú brot.</note>
                     <msItem n="1.1">
                        <locus from="1r" facs="#AM02-0162A-theta-0001r" to="1v">1r-v</locus>
                        <incipit defective="true">… nú fara fyrst …</incipit>
                        <explicit defective="true">… þar Þórdís er át(ti) …</explicit>
                     </msItem>
                     <msItem n="1.2">
                        <locus from="2r" facs="#AM02-0162A-theta-0002r" to="2v">2r-2v</locus>
                        <title type="uniform">Egils saga Skallagrímssonar</title>
                        <incipit defective="true"> … og þeir bræður …</incipit>
                        <explicit defective="true">… Ekki vil eg ber(jast) …</explicit>
                     </msItem>
                     <msItem n="1.3">
                        <locus from="3r" facs="#AM02-0162A-theta-0003r" to="4v">3r-4v</locus>
                        <title type="uniform">Egils saga Skallagrímssonar</title>
                        <incipit defective="true">… er þeir eru ósáttir …</incipit>
                        <explicit defective="true">… En þó mun Ölvaldi þykja ó(sannligt)
                        …</explicit>
                     </msItem>
                  </msItem>
               </msContents>

               <physDesc>
                  <objectDesc form="codex">
                     <supportDesc material="perg">
                        <support>Skinn.</support>
                        <extent>4 blöð (<dimensions type="leaf" unit="mm" scope="all">
                              <height>248</height>
                              <width>144</width>
                           </dimensions>).</extent>
                        <foliation>
                           <p>Blöðin eru blaðmerkt síðar með bleki, 1-4.</p>
                        </foliation>
                        <collation>
                           <p>Stök blöð.</p>
                        </collation>
                        <condition>
                           <p>
                              <list>
                                 <item>Blöðin eru skítug og dökk.</item>
                                 <item>Á <locus from="1r" facs="#AM02-0162A-theta-0001r" to="1r">1r</locus> er eyða þar sem
                                    lítillega vantar í textann (einn vísuhelming).</item>
                                 <item>Bl. <locus from="2r" facs="#AM02-0162A-theta-0002r" to="2v">2</locus> er nokkuð skaddað að
                                    ofanverðu.</item>
                                 <item>Skorið hefur verið ofan af bl. <locus from="3r" facs="#AM02-0162A-theta-0003r" to="3v">3</locus> (um það bil tíu línur vantar).</item>
                                 <item>Saumgöt eru á bl. <locus from="2r" facs="#AM02-0162A-theta-0002r" to="3v">2-3</locus>.</item>
                              </list>
                           </p>
                        </condition>
                     </supportDesc>
                     <layoutDesc>
                        <layout columns="1" writtenLines="40">
                           <p>
                              <list>
                                 <item>Eindálka.</item>
                                 <item>Leturflötur er ca <dimensions type="written" unit="mm"><height>192-195</height><width>95-100</width></dimensions>.</item>
                                 <item>Línufjöldi er 40.</item>
                                 <item>Gatað hefur verið fyrir línum.</item>
                              </list>
                           </p>
                        </layout>
                     </layoutDesc>
                  </objectDesc>
                  <handDesc>
                     <p/>
                  </handDesc>
                  <additions><p><list>
                     <item>Á ytri spássíu <locus from="3v" facs="#AM02-0162A-theta-0003v" to="3v">3v</locus> hefur <name key="ArnMag001" type="person">Árni Magnússon</name> skrifað (líklega
                           <date when="1704">1704</date>): <q xml:lang="is">Frá Pétri Markússyni
                           1704</q>.</item>
                     <item>Hvert blað hefur nýlega verið merkt á neðri spássíu með titli sögunnar og vísað í blaðsíðutöl.</item>
                  </list></p>  </additions>
                  <bindingDesc>
                     <binding notBefore="1995-06" notAfter="1995-11" contemporary="false">
                        <p>Band frá 1995 (<dimensions type="binding" unit="mm"><height>244</height><width>238</width></dimensions>). Pappakápa, bl. fest á móttök inn í japanpappír, ofinn líndúkur kili. Handritið liggur í öskju með öðrum AM 162 a fol.-handritum.</p>
                     </binding>
                  </bindingDesc>
               </physDesc>

               <history>
                  <origin notBefore="1240" notAfter="1260">
                     <p>Handritið var skrifað á <origPlace key="IS">Íslandi</origPlace>. Það er
                        tímasett til 13. aldar í <bibl>
                           <ref target="KKKat">Katalog I</ref>
                        </bibl>, bls. 116, en til <origDate notBefore="1240" notAfter="1260">miðrar
                           aldarinnar</origDate> í <bibl>
                           <ref>ONPRegistre</ref>
                        </bibl>, bls. 434 (sjá einnig <bibl>
                           <ref target="IHFol2">Early Icelandic Script</ref>
                        </bibl>, bls. xxvi (nr. 39).</p>
                  </origin>
                  <provenance>
                     <p>
                        <name key="ArnMag001" type="person">Árni Magnússon</name> fékk handritið
                        frá <name key="PetMar001" type="person">Pétri Markússyni</name> <date when="1704">1704</date> (sjá ytri spássíu <locus from="3v" facs="#AM02-0162A-theta-0003v" to="3v">3v</locus>). Áður átti það <name type="person" key="RagJon002">Ragnheiður Jónsdóttir</name> í Gröf á Höfðaströnd.</p>
                  </provenance>
                  <acquisition when="1996-09-19">
                     <p>Stofnun Árna Magnússonar á Íslandi tók við handritinu 19. september
                     1996.</p>
                  </acquisition>
               </history>

