               <history>
                  <origin notBefore="1590" notAfter="1610">
                     <p>Skrifað af ýmsum, þ.á.m. <name key="JonOla001" type="person">Jóni
                           Ólafssyni</name> nokkrum (bl. 14r-15r), og tímasett til c1600 í <bibl>
                           <ref target="KKKat">Katalog (II) 1894:131</ref>
                        </bibl>.</p>
                  </origin>
                  <provenance>
                     <p>
                        <name key="ArnMag001" type="person">Árni Magnússon</name> hefur fengið
                        handritið frá <name key="ThoSte001" type="person">Þórði Steindórssyni</name>
                        (sbr. umslag).</p>
                     <p>Skv. efnisyfirliti <name key="ArnMag001" type="person">Árna
                        Magnússonar</name> (sjá seðla) og handritaskrá <name key="JonOla003"
                           type="person">Jóns Ólafssonar</name>, <ref type="ms" target="AM02-0477">AM 477
                              fol.</ref>, var áður einnig í handritinu kvæðið <title type="supplied">Friðarbón</title>
                        (<title type="parallel">Hæstur bið eg að himnatiggi</title>).</p>
                     <!-- Ath. Vísnabókina (bls. 273) -->
                  </provenance>
                  <!-- Árni Magnússon skrifar á umslag: <q>Gömul qvæde frä Þorde Steindórs syne.</q> -->
                  <acquisition notBefore="1979-01-23" notAfter="1979-01-23">
                     <p>Stofnun Árna Magnússonar á Íslandi tók við handritinu 23. janúar 1979.</p>
                  </acquisition>
               </history>
