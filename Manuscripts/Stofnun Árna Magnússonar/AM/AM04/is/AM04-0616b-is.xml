               <msContents>
                  <textLang mainLang="is">Íslenska</textLang>
                  <msItem n="1" class="rimur">
                     <locus from="1r" to="16r">1r-16r</locus>
                     <title type="uniform">Rímur af Viktor og Blávus</title>
                     <title type="parallel">Rímur af Blávus og Viktor</title>
                     <note>12 rímur.</note>
                     <rubric>Af Victor og Blavus</rubric>
                     <incipit type="upphaf">Gjarnan vildi eg gamna frú</incipit>
                     <explicit>rijm<expan>ur</expan> klienar falle hier</explicit>
                     <colophon>Hier endast Rÿm<expan>ur</expan> af Victor o<expan>c</expan> Blaus |
                           An<expan>n</expan>o 1663 þan<expan>n</expan> 3 Januarij</colophon>
                  </msItem>
                  <msItem n="2" class="rimur">
                     <locus from="16v" to="30r">16v-30r</locus>
                     <title type="uniform">Rímur af Landrési</title>
                     <title type="parallel">Landrésrímur</title>
                     <note>9 rímur.</note>
                     <rubric>Rÿmur Af Landrese</rubric>
                     <incipit type="upphaf">Skýrra tel eg það skálda hátt</incipit>
                     <explicit>reisa ma eg han<expan>n</expan> ecki leingur. FINIS</explicit>
                  </msItem>
                  <msItem n="3" class="rimur">
                     <locus from="30v" to="39r">30v-39r</locus>
                     <title type="uniform">Rímur af Þóri hálegg</title>
                     <title type="parallel">Þóris rímur háleggs</title>
                     <note>10 rímur.</note>
                     <rubric>Hier skrifast Rÿm<expan>ur</expan> af Þorer Halegg</rubric>
                     <incipit type="upphaf">Vil eg því ekki vandann hátt</incipit>
                     <explicit>a enda sendi eg Fiolners vÿn. FINIS</explicit>
                  </msItem>
                  <msItem n="4" class="rimur">
                     <locus from="39v" to="63v">39v-63v</locus>
                     <author>Sigurður blindur</author>
                     <title type="uniform">Rímur af Andra jarli</title>
                     <title type="parallel">Andra rímur</title>
                     <note>13 rímur í tveimur hlutum.</note>
                     <msItem n="4.1" class="rimur">
                        <locus from="39v" to="52v">39v-52v</locus>
                        <note>1.-6. ríma.</note>
                        <rubric>Hier skriffast Andra Rÿm<expan>ur</expan> sex</rubric>
                        <incipit type="upphaf">Mín varð raunar raddar eik</incipit>
                        <explicit>an<expan>n</expan>an<expan>n</expan> tÿma nen<expan>n</expan>e eg
                           betur</explicit>
                     </msItem>
                     <msItem n="4.2" class="rimur">
                        <locus from="52v" to="63v">39v-63v</locus>
                        <note>7.-13. ríma.</note>
                        <rubric>Nu biriast hier Rÿm<expan>ur</expan> aff Helga og Hogna
                              <expan>og</expan> er hin siovnda j flocknum first hi<expan>er</expan>
                           skrifud</rubric>
                        <incipit type="upphaf">Skemmtan mín er veniris vín</incipit>
                        <explicit>late geimast Asa min<expan>n</expan>e</explicit>
                     </msItem>
                  </msItem>
                  <msItem n="5" class="rimur">
                     <locus from="64r" to="88v">64r-88v</locus>
                     <author>Eyjólfur Jónsson</author>
                     <title type="uniform">Rímur af Gibbon</title>
                     <note>12 rímur.</note>
                     <rubric>Hier biriast Gibbiuns Rÿmur ort<expan>ar</expan> aff Ejolfe Jonssyne
                        1663</rubric>
                     <incipit type="upphaf">Meistarar forðum mæltu margt</incipit>
                     <explicit>dv[i]na þan<expan>n</expan>in<expan>n</expan> liodin<expan>n</expan>
                     </explicit>
                  </msItem>
                  <msItem n="6" class="rimur">
                     <locus from="88v" to="90v">88v-90v</locus>
                     <title type="uniform">Rímur af Flóres og Leó</title>
                     <note>Einungis mansöngvar rímnanna, enda í 4. vísu 6. mansöngs.</note>
                     <rubric>Man<expan>n</expan>søngu<expan>ar</expan> af Flørenz
                           Rÿm<expan>um</expan>
                     </rubric>
                     <incipit type="upphaf">Diktuðu sögur og sonar vers</incipit>
                     <explicit>minst so verdi ä søgun<expan>n</expan>i brijalud</explicit>
                     <note>Bl. 90r autt, 90v upprunalega autt.</note>
                  </msItem>
