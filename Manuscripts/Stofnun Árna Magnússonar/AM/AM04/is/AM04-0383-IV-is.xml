                     <title type="uniform">Þorláks saga helga</title>
                     <note>Brot.</note>

                     <msItem n="1.1" defective="true" class="bisks">
                        <locus from="1r" facs="#AM04-0383-IV-0001r" to="1v">1r-1v</locus>
                        <incipit defective="true">… m[yndi að vera] …</incipit>
                        <explicit defective="true">… fémaður mikill …</explicit>
                     </msItem>
                     <!-- <bibl><ref target="Bisk">Biskupa sögur I, 1858</ref>, bls. 266-67</bibl> -->

                     <msItem n="1.2" defective="true" class="bisks">
                        <locus from="2r" facs="#AM04-0383-IV-0002r" to="2v">2r-2v</locus>
                        <incipit defective="true">… Þorlákur var þá vel hálf[fertugur] …</incipit>
                        <explicit defective="true">… fór vatnið þá …</explicit>
                     </msItem>
                     <!-- <bibl><ref target="Bisk">Biskupa sögur I, 1858</ref>, bls. 270-71</bibl> -->

                     <msItem n="1.3" defective="true" class="bisks">
                        <locus from="3r" facs="#AM04-0383-IV-0003r" to="3v">3r-3v</locus>
                        <incipit defective="true">… var hann þá heill orðinn síns meins …</incipit>
                        <explicit defective="true">… og frá þeirri stundu mátti úr (?) kenna …</explicit>

                     </msItem>
                     <msItem n="1.4" defective="true" class="bisks">
                        <locus from="4r" facs="#AM04-0383-IV-0004r" to="4v">4r-4v</locus>
