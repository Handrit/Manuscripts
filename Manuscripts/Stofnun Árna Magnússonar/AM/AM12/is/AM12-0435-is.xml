                        <textLang mainLang="is" otherLangs="la">Íslenska og Latína</textLang>
                        <msItem n="1" class="alf" defective="true">
                            <locus from="1r" facs="#AM12-0435-0001r" to="15v">1r-15v</locus>
                            <title type="supplied">Um náttúru mannsins</title>
                            <rubric>Sequiur de naturas</rubric>
                            <incipit>Almáttugur Guðsson með fagurlegan vilja …</incipit>
                            <explicit>… þá skal meira virða augnabragðið
                            því að það skal ráða eftir …</explicit>
                            <note>Vantar niðurlag textans</note>
                        </msItem>
                        <msItem n="2" class="alf" defective="true">
                            <locus from="17v" facs="#AM12-0435-0017v" to="26r">17v-26r</locus>
                            <title type="supplied">Um messur og helgidaga</title>
                            <incipit>Alexander hinn fyrsti páfi bauð að kennimenn skyldu vígja salt og vatn …</incipit>
                            <explicit>… á skepnuna alla skal kalla og lofa svo skapara sinn.</explicit>
                        </msItem>
                        <msItem n="3" class="timat" defective="true">
                            <locus from="26r" facs="#AM12-0435-0026r" to="28r">26r-28r</locus>
                            <title type="supplied">Rímtal</title><!-- ath hvort sé hægt að lesa fyrirsögnina -->
                            <incipit>Guð bauð Moysi vin sinn í lögmáli að gaumgæfa …</incipit>
                            <explicit>…  er þá ein nótt að munum. Tekur fé …</explicit>
                            <note>Vantar aftan á textann.</note>
                            <note>Kålund segir textann sambærilegan <bibl><ref target="Kr_Kål1914a">Rím I, Alfræði íslenzk II:4–10</ref>.</bibl> </note>
                            <note>Síður <locus from="28v" facs="#AM12-0435-0028v" to="32r">28v-32r </locus>eru auðar.</note>
                        </msItem>
                        <msItem n="4" class="timat" defective="false">
                            <locus from="26r" facs="#AM12-0435-0032v" to="54v">32v-54v</locus>
                            <title type="supplied">Rím</title>
                            <incipit>[I]anuarius habet dies xxxi …</incipit>
                            <explicit>Nítjánda tungl í öld er tungl sjö nátta og tuttugu átta dag.</explicit>                            
                        </msItem>
                        <msItem n="5" class="timafr" defective="false">
                            <locus from="55r" facs="#AM12-0435-0055r" to="28r">55r-58r</locus>
                            <title type="supplied">Tunglsaldrar</title>
                            <incipit>Luna. Tungl einnætt þá skapaði Guð himinn og jörð …</incipit>
                            <explicit>Barn þá fæðist verður mikill lukku maður og hyggið.</explicit>                            
                        </msItem>
                        <msItem n="6" class="jola" defective="false">
                            <locus from="58v" facs="#AM12-0435-0058v" to="59r">58v-59r</locus>
                            <title type="supplied">Jólaskrá</title>
                            <incipit>Ef jól kemur á drottins dag þá er vetur góður …</incipit>
                            <explicit>… sauðir deyja og gamlir menn falla og húshruni verður oft.</explicit> 
                            <note>Texti á <locus from="59v" facs="#AM12-0435-0059v" to="62v">59v-62v </locus>hefur verið skafinn upp.</note>
                        </msItem>
